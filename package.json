{
  "name": "api",
  "packageManager": "yarn@4.2.2",
  "type": "module",
  "scripts": {
    "docker:dev": "yarn docker:up && yarn docker:watch",
    "docker:up": "docker-compose -p leave-management-api up -d --build --force-recreate",
    "docker:stop": "docker-compose -p leave-management-api stop",
    "docker:watch": "docker-compose -p leave-management-api logs -f --tail 10 --no-log-prefix api",
    "dev": "NODE_ENV=development tsup & nodemon dist/src/server.js",
    "build": "NODE_ENV=production tsup",
    "start": "node dist/src/server.js",
    "migrate:build": "tsup --config tsup.migrations.config.ts",
    "migrate:exec": "node dist/migrations/runMigrations.js",
    "migrate": "yarn migrate:build && yarn migrate:exec",
    "seed:build": "tsup --config tsup.seeds.config.ts",
    "seed:exec": "node dist/seeds/runSeeds.js",
    "seed": "yarn seed:build && yarn seed:exec",
    "migrateandseed": "yarn migrate && yarn seed",
    "lint": "eslint --fix"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "http-status-codes": "^2.3.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "pg": "^8.13.1",
    "tsup": "^8.3.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/lodash": "^4.17.14",
    "@types/lodash-es": "^4",
    "@types/node": "^22.10.5",
    "eslint-plugin-perfectionist": "^4.6.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  }
}
